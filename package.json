{
  "name": "reserve-me-server",
  "version": "0.0.1",
  "description": "",
  "author": "Jakub Naumowicz",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node src/server.js",
    "start:local": "NODE_ENV=local nest start --debug --watch",
    "start:dev": "NODE_ENV=dev nest start",
    "migrate:local": "dotenv -e .env.local -- npx prisma migrate deploy",
    "migrate:dev": "dotenv -e .env.dev -- npx prisma migrate deploy",
    "deploy": "npm ci && npm run build && npm run start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=20.0.0"
  }
}